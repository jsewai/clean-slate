<style>

  .hero-image{
    width: 100%;
    height: 100vw;
    max-height: 100vh;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
  }
  {% if section.settings.show_announcement%}
  .hero-image{
    margin-top: 3.5rem;
  }
  {% endif %}
  .nav{
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 99;
  }
  .nav__items{
    width: 100%;
    justify-content: center;
    background-color: #ffffff;
    border-bottom: 1px solid black;
    display: grid;
    grid-template-columns: auto 1fr auto;
  }
  .hero-image__text{
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
  }
  .announcement-bar {
    width: 100%;
    background-color: {{ section.settings.announcement_bar_color }};
    text-align: center;
    text-decoration: none;
  }
  .announcement-bar__message {
    color: {{ section.settings.announcement_bar_text }};
    line-height: 3.5;
  }
  .form-control{
    width: 90%
  }
  .search-bar{
    display: flex;
    flex-wrap: nowrap;
    margin-left: 20px;
  }
  .nav__links{
    text-align: right;
  }
  .nav__links > li{
    display: inline-block;
    padding-right: 15px;
    padding-left: 15px;
  }
  a{
    color: black
  }
  .nav__items > ul{
    list-style: none;
    margin: auto 0;
  }
  .nav__links a{
    text-decoration: none;
  }
  .nav__links a:hover{
    color: black;
  }

  @media screen and (max-width:750px) {
    .nav__items{
      width: 100%;
      justify-content: center;
      background-color: #ffffff;
      border-bottom: 1px solid black;
      display: grid;
      grid-template-columns: auto 1fr;
    }
    .nav__links{
      grid-column: 2/3;
      grid-row: 1/2;
    }
    .search-bar{
      grid-column: 1 / 3;
      grid-row: 2 /;
    }
    .pipe{
      display: none;
    }
    .header{
      margin-top:11rem;
    }
  }
</style>


<div data-section-id="{{ section.id }}" data-section-type="header-section" class="header">
  <header role="banner">
    <nav role="navigation" class="nav">  
    {%- if section.settings.show_announcement -%}
      <div class="announcement-bar">
        <p class="announcement-bar__message">{{section.settings.announcement_text}}</p>
      </div>
    {%- endif -%}
    
    <section class="nav__items">
      <ul>
        <li><a href="/">{% include 'icon-shopify-logo' %}</a></li>
      </ul>
      <form action="/search" method="get" role="search" class="search-bar">
        <label for="Search" class="label-hidden">
          {{ 'general.search.placeholder' | t }}
        </label>
        <input type="search"
              name="q"
              id="Search"
              class="form-control"
              value="{{ search.terms | escape }}"
              placeholder="{{ 'general.search.placeholder' | t }}">
        <button type="submit" class="btn">
          {% include 'icon-search' %}
          <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
        </button>
      </form>
      <ul class="nav__links">
        {% for link in linklists[section.settings.main_linklist].links %}
          {% if link.links 
            != blank %}
            <li>
              <a href="{{ link.url }}">{{ link.title | escape }}</a>
              <ul>
                {% for childlink in link.links %}
                  {% if childlink.links != blank %}
                    <li>
                      <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                      <ul>
                        {% for grandchildlink in childlink.links %}
                          <li>
                            <a href="{{ grandchildlink.url }}">{{ grandchildlink.title | escape }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    </li>
                  {% else %}
                    <li>
                      <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            </li>
          {% else %}
            <li>
              <a href="{{ link.url }}">{{ link.title | escape }}</a>
            </li>
          {% endif %}
        {% endfor %}
        <span class="pipe">|</span>
        <li>
          <a href="/cart">
            {% include 'icon-cart' %}
            {{ 'layout.cart.title' | t }}
            ({{ cart.item_count }} {{ 'layout.cart.items_count' | t: count: cart.item_count }})
          </a>
        </li>
      </ul>
    </section>
  </nav>

  {% capture image_size %}{{ section.settings.hero_max_width }}x{% endcapture %}
  <section class="hero-image" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url({{ section.settings.hero_image | img_url: image_size }});">
    <div class="hero-image__text">
      <h1 class="header-text">{{ section.settings.hero_bar_header }}</h1>
      <p class="header-description">{{ section.settings.hero_bar_text }}</p>
    </div>
  </section>
  </header>

  
</div>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "hero_image",
        "label": "Hero image"
      },
      {
        "type": "range",
        "id": "hero_max_width",
        "min": 750,
        "max": 1600,
        "step": 10,
        "unit": "px",
        "label": "Custom hero width",
        "default": 1600
      },
      {
        "type": "link_list",
        "id": "main_linklist",
        "label": "Menu",
        "default": "main-menu"
      },
      {
        "type": "checkbox",
        "id": "show_announcement",
        "label": "Show announcement",
        "default": true
      },
      {
        "type": "text",
        "id": "announcement_text",
        "label": "Announcement Text",
        "default": "Type Announcement Text"
      },      
      {
        "type": "color",
        "id": "announcement_bar_color",
        "label": "Background color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "announcement_bar_text",
        "label": "Announcement Text Color",
        "default": "#ffffff"
      },
      {
        "type": "text",
        "id": "hero_bar_header",
        "label": "Hero Bar Header",
        "default": "Hero Bar Header"
      },      
      {
        "type": "text",
        "id": "hero_bar_text",
        "label": "Hero Bar Text",
        "default": "Hero Bar Text"
      }
    ]
  }

{% endschema %}




